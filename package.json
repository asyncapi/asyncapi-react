{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyma-incubator/asyncapi-react.git"
  },
  "author": {
    "name": "The Kyma project authors",
    "url": "http://kyma-project.io"
  },
  "bugs": {
    "url": "https://github.com/kyma-incubator/asyncapi-react/issues"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npm run build:lib",
    "clean": "lerna clean",
    "start": "lerna exec --parallel -- npm run start",
    "build:lib": "cd library && npm build",
    "test": "lerna exec -- npm run test",
    "test:library": "cd library && npm test",
    "test:playground": "cd playground && npm test"
  },
  "devDependencies": {
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{ts,tsx,js,jsx,json}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
