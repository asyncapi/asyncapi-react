    "@types/react-syntax-highlighter": "0.0.8",
    "@types/styled-components": "^4.0.3",
    "babel-cli": "^6.26.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2",
    "react-scripts": "2.1.0",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "3.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{ts,js,json}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "jest": {
    "verbose": false,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ],
    "testRegex": "(/test/[^_][a-zA-Z0-9/]*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
