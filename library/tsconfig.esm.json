{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "outDir": "lib/esm"
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"],
  "exclude": [
    "src/standalone.ts",
    "lib/**/*",
    "browser/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
