{
  "name": "@kyma-project/asyncapi-react",
  "version": "0.2.0",
  "private": false,
  "description": "A React component for AsyncAPI specification.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asyncapi/asyncapi-react"
  },
  "author": {
    "name": "The Kyma project authors",
    "url": "http://kyma-project.io"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/asyncapi/asyncapi-react/issues"
  },
  "keywords": [
    "asyncapi",
    "asyncapi-specification",
    "react",
    "reactjs",
    "styled-components",
    "event"
  ],
  "tags": [
    "asyncapi",
    "asyncapi-specification",
    "react",
    "reactjs",
    "styled-components",
    "event"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "lint-check": "tslint -c ./tslint.json --project ./tsconfig.json --format verbose && prettier --config ./.prettierrc --check '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "lint-fix": "tslint -c ./tslint.json --project ./tsconfig.json --format verbose --fix; prettier --config ./.prettierrc --write './src/**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "eject": "react-scripts eject",
    "prepare": "npm run build",
    "prepack": "cp ../README.md ./README.md && cp ../LICENSE ./LICENSE",
    "postpack": "rm -rf ./README.md && rm -rf ./LICENSE"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "asyncapi": "^2.1.0",
    "asyncapi-parser": "^0.5.2",
    "dompurify": "^1.0.8",
    "js-yaml": "^3.12.0",
    "json-schema-ref-parser": "^6.0.2",
    "markdown-it": "^8.4.2",
    "openapi-sampler": "^1.0.0-beta.14"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/dompurify": "0.0.32",
    "@types/markdown-it": "0.0.8",
    "@types/node": "10.12.1",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/styled-components": "^4.0.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "jest": "^23.6.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.0",
    "styled-components": "^4.0.3",
    "ts-jest": "^23.10.4",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "styled-components": ">= 3.4.0"
  }
}
