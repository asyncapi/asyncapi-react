{
  "name": "@kyma-project/asyncapi-react",
  "version": "0.2.0",
  "private": false,
  "description": "A React component for AsyncAPI specification.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asyncapi/asyncapi-react"
  },
  "author": {
    "name": "The Kyma project authors",
    "url": "http://kyma-project.io"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/asyncapi/asyncapi-react/issues"
  },
  "keywords": [
    "asyncapi",
    "asyncapi-specification",
    "react",
    "reactjs",
    "styled-components",
    "event"
  ],
  "tags": [
    "asyncapi",
    "asyncapi-specification",
    "react",
    "reactjs",
    "styled-components",
    "event"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest -i",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "test:watch": "jest --watch --coverage",
    "eject": "react-scripts eject",
    "prepare": "npm run build",
    "prepack": "cp ../README.md ./README.md && cp ../LICENSE ./LICENSE",
    "postpack": "rm -rf ./README.md && rm -rf ./LICENSE"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "asyncapi": "^2.1.0",
    "dompurify": "^1.0.8",
    "js-yaml": "^3.12.0",
    "json-schema-ref-parser": "^6.0.2",
    "markdown-it": "^8.4.2",
    "openapi-sampler": "^1.0.0-beta.14",
    "z-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/dompurify": "0.0.32",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.9",
    "@types/node": "10.12.1",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/styled-components": "^4.0.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "jest": "^23.6.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-scripts": "2.1.0",
    "styled-components": "^4.0.3",
    "ts-jest": "^23.10.4",
    "typescript": "3.1.4"
  },
  "peerDependencies": {
    "styled-components": ">= 3.4.0"
  },
  "jest": {
    "verbose": false,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ],
    "testRegex": "(/test/[^_][a-zA-Z0-9/]*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
