{
  "name": "asyncapi-react",
  "version": "0.1.0",
  "private": false,
  "description": "A simple React component for AsynApi specification.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asyncapi/asyncapi-react"
  },
  "author": {
    "name": "The Kyma project authors",
    "url": "http://kyma-project.io"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/asyncapi/asyncapi-react/issues"
  },
  "keywords": [
    "react",
    "asyncapi"
  ],
  "tags": [
    "react",
    "asyncapi"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest -i",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "test:watch": "jest --watch --coverage",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "z-schema": "^3.24.1",
    "asyncapi": "^2.1.0",
    "dompurify": "^1.0.8",
    "js-yaml": "^3.12.0",
    "json-schema-ref-parser": "^6.0.2",
    "markdown-it": "^8.4.2",
    "openapi-sampler": "^1.0.0-beta.14",
    "react-syntax-highlighter": "^10.0.1"
  },
  "devDependencies": {
    "@types/dompurify": "0.0.32",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.9",
    "@types/node": "10.12.1",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/react-syntax-highlighter": "0.0.8",
    "@types/styled-components": "^4.0.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "jest": "^23.6.0",
    "react-scripts": "2.1.0",
    "ts-jest": "^23.10.4",
    "styled-components": "^4.0.3",
    "typescript": "3.1.4"
  },
  "peerDependencies": {
    "styled-components": "^4.0.3"
  },
  "jest": {
    "verbose": false,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ],
    "testRegex": "(/test/[^_][a-zA-Z0-9/]*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
