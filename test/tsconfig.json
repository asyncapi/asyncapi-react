{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "src",
    "module": "es2015",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
