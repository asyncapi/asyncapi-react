{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "isolatedModules": true,
    "noEmit": true,
    "strict": false,
    "alwaysStrict": false,
    "noUnusedLocals": false
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"],
  "exclude": ["build/**/*"]
}
